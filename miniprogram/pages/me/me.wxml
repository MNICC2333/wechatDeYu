<view class="cover">
  <van-image
    round
    fit="cover"
    width="180rpx"
    height="180rpx"
    bind:click="tapAvatar"
    src="{{userInfo.avatarUrl}}"
  />
  <view></view>
  <text bindtap="tapLogin">{{userInfo.nickName}}</text>
</view>

<van-grid>
  <van-grid-item dot icon="passed" text="立即签到" />
  <van-grid-item badge="99+" icon="gift-o" text="我的福利" />
  <van-grid-item icon="clock-o" text="观看历史" />
  <van-grid-item icon="shop-o" text="积分商城" />
</van-grid>











